							<div id="content" class="span10">
								<!-- start: Content -->
								<div>
									<hr>
									<ul class="breadcrumb">
										<li>
											<a href="#">Home</a> <span class="divider">/</span>
										</li>
										<li>
											<a href="#">Mondiso Zone Distribution</a>
										</li>
									</ul>
									<hr>
								</div>
								<hr>

								<div class="row-fluid sortable">
								<div class="box span12">
									<div class="box-header" data-original-title>
										<h2><i class="icon-user"></i><span class="break"></span>Zone Distribution</h2>
										<div class="box-icon">
											<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
											<a href="#" class="btn-close"><i class="icon-remove"></i></a>
										</div>
									</div>

									<div class="box-content">
							    		<script type='text/javascript' src='https://www.google.com/jsapi'></script>
							    		<%= javascript_tag do %>
							    		 	google.load('visualization', '1', {'packages': ['geochart']});
							  		  		google.setOnLoadCallback(drawRegionsMap);

							    			function drawRegionsMap() {
						        			var data = google.visualization.arrayToDataTable([
					        				['Country', 'Users', 'Transactions'],
					     		   			<%for i in 0..@names.size - 2%>

							        			['<%=@names[i]%>',<%=@times[i]%>,<%=@trans[i]%>],
											<% end %>
											<% i = i+1%>
											['<%=@names[i]%>',<%=@times[i]%>,<%=@trans[i]%>]
      										]);

      										var options = {};

        									var chart = new google.visualization.GeoChart(document.getElementById('chart_div'));
       		 								chart.draw(data,  {colorAxis: {colors:['#BBFFBB', '#00FF00'], values:[0, <%=@times.max%>]}


       		 							});
    										};
    									<% end %>
  
    									<div id="chart_div" style="width: 945px; height: 525px;"></div>

    								</div>
    							</div>
    							</div>


 								

								 <div class="row-fluid sortable">

								 	
										
										
									

								 	<div class="box span12">
										<div class="box-header" data-original-title>
											<h2><i class="icon-user"></i><span class="break"></span>Single Users Zone Distribution</h2>
											<div class="box-icon">
												<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
												<a href="#" class="btn-close"><i class="icon-remove"></i></a>
											</div>
										</div>
										<div class="box-content">
											<table class="table table-striped table-bordered bootstrap-datatable datatable">
												<thead>
													<tr>
														<th class="floatleft">Country <i class="fa-icon-sort"></i></th>
														<th class="floatleft">Users <i class="fa-icon-sort-down"></i></th>
														<th class="floatleft">Transactions <i class="fa-icon-sort"></i></th>
													</tr>

												</thead>   
												<tbody>
													<%for i in 0..@names.size - 1%>

														<tr>
															<td><%=@names[i]%></td>
															<td class="center"><%=@times[i]%></td>
															<td class="center"><%=@trans[i]%></td>
														</tr>											 
													<% end %>
												</tbody>
											</table>            
										</div>
									</div><!--/span-->

								</div>	<!--/row shortable-->	

								<div>
									<!-- UPDATE CHARTS FORM -->
									<%= form_tag do %>			
 										From: <br><%= select_date @date1, :prefix => :start_date %><br>
										To:   <br><%= select_date @date2, :prefix => :end_date %><br>
										<%= submit_tag("Update Table", :class => "btn btn-large btn-info") %>
									<% end %>
								</div>										
									

										<hr>							
							</div><!--/#content.span10-->